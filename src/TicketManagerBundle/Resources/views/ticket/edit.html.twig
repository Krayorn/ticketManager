{% extends 'TicketManagerBundle::layout.html.twig' %}

{% block navLinks %}
    <li><a href="{{ path('ticket_new') }}">Create new ticket</a></li>
    <li><a href="{{ path('ticket_index') }}">Back to the list</a></li>
    <li><a href="{{ path('ticket_show', {'id': ticket.id}) }}">Back to the ticket</a></li>

    {{ parent() }}
{% endblock %}

{% block content %}
    <h2 class="truncate red-text text-lighten-1">Ticket edit</h2>
    <div class="row">
        {{ form_start(edit_form) }}
            {{ form_widget(edit_form) }}
            <button class="red accent-2 btn waves-effect waves-light" type="submit" name="action">
                Edit
            </button>
        {{ form_end(edit_form) }}
    </div>
    <div class="row">
        <a class="red accent-2 col s2 btn waves-effect waves-light" href="{{ path('ticket_index') }}">Back to the list</a>

        {{ form_start(delete_form) }}
            <button class="red accent-2 col s2 offset-s1 btn waves-effect waves-light" type="submit" name="action">
                Delete
            </button>
        {{ form_end(delete_form) }}
    </div>
{% endblock %}
