{% extends 'TicketManagerBundle::layout.html.twig' %}

{% block content %}
    <h1>Tickets list</h1>

        {% for ticket in tickets %}
            <div>
                <h2>
                    <a href="{{ path('ticket_show', { 'id': ticket.id }) }}">{{ ticket.title }}</a>
                </h2>
                <p>{{ ticket.content| nl2br }}</p>
                <span>created the {{ ticket.created|date('Y-m-d H:i:s') }} by {{ ticket.author }}</span>
                <span>
                        assigned to :
                    {% if ticket.assignedAt %}
                        {{ ticket.assignedAt }}
                    {% else %}
                        No one
                    {% endif %}
                </span>
                <ul>
                    <li>
                        <a href="{{ path('ticket_show', { 'id': ticket.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('ticket_edit', { 'id': ticket.id }) }}">edit</a>
                    </li>
                </ul>
                <span>{{ticket.messages.count()}} messages </span> {# FIXME: Messages #}
            </div>
        {% endfor %}

    <ul>
        <li>
            <a href="{{ path('ticket_new') }}">Create a new ticket</a>
        </li>
    </ul>
{% endblock %}
